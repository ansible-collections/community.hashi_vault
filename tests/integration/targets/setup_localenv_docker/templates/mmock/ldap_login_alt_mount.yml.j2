#jinja2:variable_start_string:'[%', variable_end_string:'%]'
---
request:
  method: POST|PUT
  path: "/v1/auth/ldap-alt/login/:user"
control:
  priority: 10
response:
  statusCode: 200
  headers:
    Content-Type:
      - application/json
  body: >-
    {
        "request_id": "{{fake.UUID}}",
        "lease_id": "",
        "lease_duration": 0,
        "renewable": false,
        "data": {},
        "warnings": null,
        "auth": {
            "client_token": "s.{{fake.CharactersN(24)}}",
            "accessor": "{{fake.CharactersN(24)}}",
            "policies": [
                "default",
                "ldap-alt-sample-policy"
            ],
            "token_policies": [
                "default",
                "ldap-alt-sample-policy"
            ],
            "identity_policies": null,
            "metadata": {
                "username": "{{request.path.user}}"
            },
            "orphan": true,
            "entity_id": "{{fake.UUID}}",
            "lease_duration": 3600,
            "renewable": true
        }
    }
